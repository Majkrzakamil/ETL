<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>MY APP</title>
</head>
<body>
    <ul class="offers">
        <% for(var i=0; i<offers.length; i++) {%>
            <li class="offer">
            <span><%= offers[i].name %></span>
            <span><%= offers[i].offer %></span>
            </li>
        <% } %>
    </ul>

    <form action="/offers" method="POST">
        <input type="text" placeholder="name" name="name">
        <input type="text" placeholder="offer" name="offer">
        <button type="submit">Submit</button>
    </form>
    <button id="delete">Delete DB</button>

    <script src="main.js"></script>
</body>
</html>